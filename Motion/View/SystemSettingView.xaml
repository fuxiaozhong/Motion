<UserControl
    x:Class="Motion.View.SystemSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Motion.ViewModel"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:SystemSettingViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mah:DialogParticipation.Register="{Binding}"
    mc:Ignorable="d"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="527*" />
            <ColumnDefinition Width="273*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label
            Grid.ColumnSpan="2"
            Padding="10,0,0,0"
            VerticalContentAlignment="Center"
            BorderBrush="Gray"
            BorderThickness="0,0,0,1"
            Content="系统设置"
            FontSize="14"
            FontWeight="Bold"
            />
        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2">
            <StackPanel>
                <Expander Header="主题设置" IsExpanded="True">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Margin="3" Orientation="Horizontal">
                            <Label
                                Width="150"
                                HorizontalContentAlignment="Right"
                                VerticalContentAlignment="Center"
                                Content="主题:"
                                />
                            <ComboBox
                                Width="150"
                                Margin="10,0,0,0"
                                ItemsSource="{Binding AppThemes}"
                                SelectedItem="{Binding SelectAppThemeMenuData}"
                                >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Label
                                                Width="20"
                                                Height="20"
                                                Margin="0,0,10,0"
                                                Background="{Binding ColorBrush}"
                                                />
                                            <TextBlock FontSize="16" Text="{Binding Name}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Margin="3" Orientation="Horizontal">
                            <Label
                                Width="150"
                                HorizontalContentAlignment="Right"
                                VerticalContentAlignment="Center"
                                Content="颜色:"
                                />
                            <ComboBox
                                Width="150"
                                Margin="10,0,0,0"
                                ItemsSource="{Binding AccentColors}"
                                SelectedItem="{Binding SelectAccentColorMenuData}"
                                >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Label
                                                Width="20"
                                                Height="20"
                                                Margin="0,0,10,0"
                                                Background="{Binding ColorBrush}"
                                                />
                                            <TextBlock FontSize="16" Text="{Binding Name}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Margin="3" Orientation="Vertical">
                            <Button
                                Width="150"
                                Command="{Binding AppThemesSaveCommand}"
                                Content="保存"
                                />
                        </StackPanel>

                    </StackPanel>

                </Expander>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>